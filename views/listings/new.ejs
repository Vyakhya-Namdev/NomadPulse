<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h2>Create a New Listing</h2>
            <!--enctype="multipart/form-data" => use to upload images in form of files-->
            <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required/>
                    <div class="invalid-feedback">Please enter title!</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="enter description" type="text"
                        class="form-control" required></textarea>
                    <div class="invalid-feedback">Please enter a short description!</div>
                </div>

                <div class="mb-4">
                    <label for="category" class="form-label fw-semibold">Category</label>
                    <select name="listing[category]" class="form-select py-2" required>
                        <option value="" disabled selected>Select Category</option>
                        <option value="trending">Trending</option>
                        <option value="rooms">Rooms</option>
                        <option value="castles">Castles</option>
                        <option value="mountains">Mountains</option>
                        <option value="amazing-pools">Amazing Pools</option>
                        <option value="camping">Camping</option>
                        <option value="iconic-cities">Iconic Cities</option>
                        <option value="farms">Farms</option>
                        <option value="arctic">Arctic</option>
                        <option value="domes">Domes</option>
                        <option value="creativity-art">Creativity Art</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload Image</label>
                    <input name="listing[image]" type="file" class="form-control" />
                    required
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" placeholder="enter price" type="text" class="form-control" required/>
                        <div class="invalid-feedback">Price must be valid!</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required/>
                        <div class="invalid-feedback">Country name must be valid!</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required/>
                    <div class="invalid-feedback">Location must be valid!</div>
                </div>

                <button class="btn btn-dark add-btn mt-3">Add</button>
            </form>
        </div>
    </div>